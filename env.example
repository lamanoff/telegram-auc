# JWT Secret (минимум 32 символа, обязательно изменить в продакшене!)
JWT_SECRET=change_me_in_production_32chars!

# Default admin credentials (создаётся автоматически при первом запуске)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# MongoDB (в Docker используется автоматически)
MONGO_URI=mongodb://mongo:27017/auction

# Redis (в Docker используется автоматически)
REDIS_URL=redis://redis:6379

# CryptoBot Integration (опционально)
# Для продакшена используйте токен из https://pay.crypt.bot/
# Для тестирования используйте тестовый токен из тестового окружения CryptoBot
CRYPTOBOT_TOKEN=
# Базовый URL API CryptoBot (по умолчанию: https://pay.crypt.bot/api)
# Для тестового окружения укажите тестовый URL, например: https://testnet-pay.crypt.bot/api
# CRYPTOBOT_API_BASE=https://pay.crypt.bot/api

# Telegram Integration (опционально)
TELEGRAM_BOT_TOKEN=
